#!/bin/sh
# -*-sh-*-

CREATOR="Who's On First"
ORG="whosonfirst-data"
LICENSE="https://cdla.io/permissive-1-0/"

USAGE=""

ARGS=`getopt o:l:c:h $*`
set -- $ARGS

for i; do
    case "$i" in
        -h  ) 
	    USAGE=1
	    shift; shift;;
        -c  ) 
	    CREATOR=$2
	    shift; shift;;	
	-l  )
	    LICENSE=$2
	    shift; shift ;;
	-o  )
	    ORG=$2
	    shift; shift ;;	
	--  ) shift; break ;;
    esac
done

if [ "${USAGE}" = "1" ]
then
    echo "usage: wof-internet-archive -options REPO REPO..."
    echo "options:"
    echo "...please write me"
    exit 0
fi

DATA="/usr/local/data"
BUILD="/usr/local/build"
YMD=`date "+%Y%m%d"`

cd ${DATA}

for REPO in $@
do

    git clone --depth 1 https://github.com/${ORG}/${REPO}.git

    cd ${REPO}
    
    tar --exclude='.git*' --exclude='Makefile*' -cvjf ${BUILD}/${REPO}-${YMD}.tar.bz2 ./data ./meta ./LICENSE.md ./CONTRIBUTING.md ./README.md

    ia --config /etc/internetarchive/ia.ini upload ${REPO}-${YMD} ${BUILD}/${REPO}-${YMD}.tar.bz2 --metadata="title:${REPO}-${YMD}" --metadata="licenseurl:${LICENSE}" --metadata="date:${YMD}" --metadata="subject:geo;whosonfirst" --metadata="creator:${CREATOR}"

    ls -al ${BUILD}

    cd -
    
done

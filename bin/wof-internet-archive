#!/bin/sh
# -*-sh-*-

CREATOR="Who's On First"
ORG="whosonfirst-data"
LICENSE="https://cdla.io/permissive-1-0/"

UPDATED_SINCE="P30D"
GITHUB_TOKEN=""

USAGE=""

ARGS=`getopt s:t:h $*`
set -- $ARGS

for i; do
    case "$i" in
        -h  ) 
	    USAGE=1
	    shift; shift;;
        -s  ) 
	    UPDATED_SINCE=$2
	    shift; shift;;	
	-t  )
	    GITHUB_TOKEN=$2
	    shift; shift ;;
	--  ) shift; break ;;
    esac
done

if [ "${USAGE}" = "1" ]
then
    echo "usage: wof-internet-archive -options"
    echo "options:"
    echo "...please write me"
    exit 0
fi

LIST_REPOS=`which wof-list-repos`

DATA="/usr/local/data"
BUILD="/usr/local/build"
YMD=`date "+%Y%m%d"`

cd ${DATA}

for REPO in `${LIST_REPOS} -org ${ORG} -prefix ${ORG} -token ${GITHUB_TOKEN} -updated-since ${SINCE}`
do

    echo "ARCHIVE ${REPO}"
    
    git clone --depth 1 https://github.com/${ORG}/${REPO}.git

    cd ${REPO}
    
    tar --exclude='.git*' --exclude='Makefile*' -cvjf ${BUILD}/${REPO}-${YMD}.tar.bz2 ./data ./meta ./LICENSE.md ./CONTRIBUTING.md ./README.md

    echo ia --config /etc/internetarchive/ia.ini upload ${REPO}-${YMD} ${BUILD}/${REPO}-${YMD}.tar.bz2 --metadata="title:${REPO}-${YMD}" --metadata="licenseurl:${LICENSE}" --metadata="date:${YMD}" --metadata="subject:geo;whosonfirst" --metadata="creator:${CREATOR}"

    ls -al ${BUILD}

    cd -
    rm -rf ${REPO}
    
done
